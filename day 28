import random, os, time

def rollDice(side):
    result = random.randInt(1, side)
    return result
def health():
    healthStat = ((rollDice(6)*rollDice(12))/2)+10
    return healthStat
def strength():
    strengthStat = ((rollDice(6)*rollDice(8))/2)+12
    return strengthStat
print("Time for Battle!")
print()
p1Name = input("Name your character! \n")
p1Type = input("Character type: Orc, Human, Elf: \n")
print()
print(p1Name)
p1Health = health()
p1Strength = strength()

print("HEALTH:", p1Health)
print("STRENGTH:", p1Strength)
print()
print("Who are they battling?")
p2Name = input("Name your character! \n")
p2Type = input("Character type: Orc, Human, Elf: \n")
print()
print(p2Name)
p2Health = health()
p2Strength = strength()
print("HEALTH:", p2Health)
print("STRENGTH:", p2Strength)
print()

round = 1
winner = None

while True:
    time.sleep(1)
    os.system("clear")
    print("Time for Battle!")
    print()
    p1Dice = rollDice(6)
    p2Dice = rollDice(6)
    difference = abs(p1Strength - p2Strength) + 1
    if p1Dice > p2Dice:
        p2Health -= difference
        if round ==1:
            print(p1Name,"wins the first round!")
        else:
            print(p1Name, "wins at round", round)
    elif p2Dice > p1Dice:
        p1Health -= difference
        if round ==1:
            print(p2Name,"wins the first round!")
        else:
            print(p2Name,"wins at round", round)
    else: 
        print("They had a draw and continue on from round", round,"!")
    print()
    print(p1Name)
    print("HEALTH:", p1Health)
    print()
    print(p2Name)
    print("HEALTH:", p2Health)
    print()

    if p1Health <= 0:
        print(p1Name, "has died!")
        winner = p2Name
        break
    elif p2Health <= 0:
        print(p2Name, "has died!")
        winner = p1Name
        break
    else:
        print("They both live to the next round!")
        round +=1
   
    time.sleep(1)
    os.system("clear")
    print("⚔️ BATTLE TIME ⚔️")
    print()
    print(winner, "has won in", round, "rounds")
